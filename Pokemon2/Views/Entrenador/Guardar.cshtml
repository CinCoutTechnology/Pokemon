
@{
    ViewBag.Title = "Guardar";
}

<style>
    strong {
        color: red;
    }
</style>

<h2>Guardar Entrenador</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form action="/Entrenador/Guardar" method="post">

                <div class="form-group">
                    <label >Nombre <strong>@Html.ValidationMessage("Nombre")</strong></label>
                    <input class="form-control" name="Nombre" />
                </div>
                <div class="form-group">
                    <label>Ciudad</label>
                    <select name="CiudadId" class="form-control">
                        @foreach(var ciudad in ViewBag.Ciudad){

                            <option value="@ciudad.IdCiudad">@ciudad.Nombre</option>
                        }

                    </select>
                </div>
                <button type="submit" class="btn bg-danger" >Guardad</button>
            </form>
        </div>
    </div>
</div>

