
@{
    ViewBag.Title = "Index";
}

<h2>Lista de pokemones</h2>

<div class="container-fluid">
    <div class="row">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <td>Nombre</td>
                        <td>Tipo</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var poke in Model)
                    {
                        <tr>
                            <td>@poke.Nombre</td>
                            <td>@poke.TipoPokemon.Nombre</td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</div>
